% Graph Generation Script 1
% Script for generating a series of graph from the Lena image
% varing k in K-nearest neighbor graphs


%%%%%%%%%%%%%%%%%%%%%%%%%%% Batch 1 %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

% % Standard Training images
S0 = double(stdimage('lena.grey')) / 255;
S0 = imresize(S0,.5);

tag1 = 'Lena_Knearest_vark';
if ~exist(['CacheData/',tag1],'dir')
    mkdir(['CacheData/',tag1]);
end

k_all = [10,20,30,40];
lambda = 4;
tauc

% Building the Graph

for i = 1:length(k_all)
    i
    temp = S0(:,:,i);
    [~,sh] = lowpass(temp,lambda,15);
    clear temp;
    imsz = size(sh);
    psz = [12,12];
    stpsz = [1,1];
    sh = padarray(sh,psz-[1,1],'symmetric','post');
    %generate graph
    optl = {};
    optl.wsz = imsz;
    optl.psz = [12,12];
    optl.neig = 100;
    optl.Lformat = 'Sparse';
    optl.Graph.Laplacian = 'n';
    optl.Graph.tau = tauc;
    optl.Graph.Metric = 'Cosine';
    optl.Graph.GraphType = 'KNearest';
    optl.SaveMem = 1;
    optl.Graph.nsz = [];
    optl.Graph.k = k_all(i);
    
    disp('generating Cosine graph');
    [L,~] = laplacian_from_image(sh,optl);
            
    if ~exist(['CacheData/',tag1,'/Mat'],'dir')
        mkdir(['CacheData/',tag1,'/Mat']);
    end
    save(['CacheData/',tag1,'/Mat', '/',optl.Graph.Metric,'M',num2str(i),'.mat'],'L');    
    
    
    disp('generating Euclidean graph');    
    
    
    clear L;
    
end

%save data
imsz = [size(S0,1),size(S0,2)];
save(['CacheData/',tag1,'/param.mat'],'lambda','imsz','psz','optl','k_all','tauc','taue');






